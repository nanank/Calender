{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es2020",
      "scripthost"
    ],
    "noUnusedLocals": true,
    "noImplicitUseStrict": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "strictBindCallApply": true
  }
}
